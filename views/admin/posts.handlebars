<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descrição}}</p>
            <p>Conteudo: {{conteudo}}</p>
            <small>Data de publicação: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>

            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-2">Editar postagem</button></a>
            
            <form action="/admin/posts/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar postagem</button>
            </form>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}